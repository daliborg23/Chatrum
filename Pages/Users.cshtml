@page
@model Chatrum.UsersModel
@{
    ViewData["Title"] = "Chatrum";
}
<div class="container" data-bs-theme="dark">
    <div class="row justify-content-center">
        <div class="bg-dark text-light justify-content-center align-items-center text-center"
             data-bs-theme="dark">
            <h1>Hello, world!</h1>
            <h2>Welcome to My Page!</h2>

            <p>Hello, @Model.Name!</p>
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Registration Time</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.UsersTable) {
                        <tr>
                            <td>@user.Id</td>
                            <td>@user.Name</td>
                            <td>@user.Email</td>
                            <td>@user.RegistrationTime</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div></div>
        <div class="container text-secondary text-center justify-content-center align-items-center">
            <p>@Model.UserList</p>
        </div>
    </div>
</div>